<odoo>
    <record id="view_partner_form_lawyer_client" model="ir.ui.view">
        <field name="name">res.partner.form.lawyer.client</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="is_lawyer"/>
                    <field name="is_client"/>
                    <field name="bar_number"/>
                </group>
            </sheet>
        </field>
    </record>

    <record id="view_partner_list_lawyer_client" model="ir.ui.view">
        <field name="name">res.partner.list.lawyer.client</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='complete_name']" position="after">
                <field name="is_lawyer"/>
                <field name="is_client"/>
            </xpath>
        </field>
    </record>

    <record id="filter_lawyers" model="ir.filters">
        <field name="name">Lawyers</field>
        <field name="model_id">res.partner</field>
        <field name="domain">[('is_lawyer', '=', True)]</field>
    </record>

    <record id="filter_clients" model="ir.filters">
        <field name="name">Clients</field>
        <field name="model_id">res.partner</field>
        <field name="domain">[('is_client', '=', True)]</field>
    </record>
</odoo>
