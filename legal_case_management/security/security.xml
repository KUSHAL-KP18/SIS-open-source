<odoo>
    <record id="group_legal_user" model="res.groups">
        <field name="name">Legal User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_legal_manager" model="res.groups">
        <field name="name">Legal Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="rule_legal_case_user" model="ir.rule">
        <field name="name">Legal Case User Access</field>
        <field name="model_id" ref="model_legal_case"/>
        <field name="groups" eval="[(4, ref('group_legal_user'))]"/>
        <field name="domain_force">['|',('responsible_lawyer_id','=',user.partner_id.id),('member_ids.user_ids','=',user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_legal_case_manager" model="ir.rule">
        <field name="name">Legal Case Manager Access</field>
        <field name="model_id" ref="model_legal_case"/>
        <field name="groups" eval="[(4, ref('group_legal_manager'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
